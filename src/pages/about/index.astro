---
// src/pages/about/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

// SEO & Metadata Variables
const pageTitle = "Our Story | QuranAble";
const pageDescription = "Bridging 1,400 years of traditional Quranic scholarship with modern digital infrastructure. Discover the QuranAble mission.";

// DATA ARRAYS
const stats = [
  { val: "2,000+", label: "Active Students" },
  { val: "50+", label: "Certified Tutors" },
  { val: "15", label: "Countries Served" },
  { val: "100%", label: "Isnad Authenticity" }
];

const values = [
  { title: "Ihsan", sub: "Excellence", desc: "Striving for perfection in the beauty and absolute precision of every recitation.", icon: "M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-7.714 2.143L11 21l-2.286-6.857L1 12l7.714-2.143L11 3z" },
  { title: "Amanah", sub: "Trust", desc: "A sacred responsibility prioritizing child safety and exact educational accuracy.", icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" },
  { title: "Tarbiyah", sub: "Growth", desc: "Our tutors act as role models, nurturing patience, respect, and Islamic etiquette.", icon: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" },
  { title: "Itqan", sub: "Precision", desc: "Uncompromising focus on Tajweed and mastering correct articulation points.", icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" },
  { title: "Adab", sub: "Etiquette", desc: "Teaching students the profound honor of the Quran, their teachers, and their parents.", icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" },
  { title: "Taisir", sub: "Ease", desc: "Leveraging cutting-edge digital technology to make global learning completely frictionless.", icon: "M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" }
];

const hiringSteps = [
  { num: "01", title: "Ijazah Verification", desc: "We cryptographically and traditionally authenticate chains of narration strictly back to the Prophet (PBUH)." },
  { num: "02", title: "Screening & Safety", desc: "Comprehensive background checks combined with master-level English communication evaluations." },
  { num: "03", title: "Pedagogy Testing", desc: "Final rigorous certification in digital classroom tools, engagement tactics, and child psychology." }
];

const countries = ["United States", "Canada", "United Kingdom", "Germany", "Europe", "Australia", "UAE", "Saudi Arabia", "Qatar"];

// INJECTED SCHEMA: AboutPage + Breadcrumbs for Google SEO
const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://quranable.com/" },
        { "@type": "ListItem", "position": 2, "name": "Our Story", "item": "https://quranable.com/about" }
      ]
    },
    {
      "@type": "AboutPage",
      "name": pageTitle,
      "description": pageDescription,
      "url": "https://quranable.com/about",
      "publisher": {
        "@type": "Organization",
        "name": "QuranAble",
        "logo": "https://quranable.com/logo.png"
      }
    }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <style>
    /* STANDARDIZED HOMEPAGE DNA */
    .hero-grid-bg { background-image: linear-gradient(to right, rgba(0,0,0,0.06) 1px, transparent 1px), linear-gradient(to bottom, rgba(0,0,0,0.06) 1px, transparent 1px); background-size: 40px 40px; mask-image: radial-gradient(circle at center, black 30%, transparent 80%); -webkit-mask-image: radial-gradient(circle at center, black 30%, transparent 80%); }
    .stripe-cta-bg { background-color: #0a2540; position: relative; overflow: hidden; }
    .stripe-cta-bg::before { content: ''; position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background-image: radial-gradient(at 0% 0%, rgba(139, 92, 246, 0.4) 0px, transparent 40%), radial-gradient(at 100% 100%, rgba(236, 72, 153, 0.4) 0px, transparent 40%); z-index: 0; }
    .stripe-grid { position: absolute; inset: -100%; background-image: linear-gradient(to right, rgba(255,255,255,0.07) 1px, transparent 1px), linear-gradient(to bottom, rgba(255,255,255,0.07) 1px, transparent 1px); background-size: 50px 50px; transform: perspective(500px) rotateX(60deg); animation: moveGrid 15s linear infinite; z-index: 1; }
    @keyframes moveGrid { 0% { transform: perspective(500px) rotateX(60deg) translateY(0); } 100% { transform: perspective(500px) rotateX(60deg) translateY(50px); } }

    /* Custom Apple-Style Animations for the UI Mockups */
    @keyframes audio-wave { 0%, 100% { transform: scaleY(0.3); } 50% { transform: scaleY(1); } }
    .animate-wave { animation: audio-wave 1.2s ease-in-out infinite; transform-origin: bottom; will-change: transform; }
    .wave-1 { animation-delay: 0s; } .wave-2 { animation-delay: 0.3s; } .wave-3 { animation-delay: 0.6s; } .wave-4 { animation-delay: 0.2s; } .wave-5 { animation-delay: 0.8s; }

    @keyframes pulse-ring { 0% { box-shadow: 0 0 0 0 rgba(236, 72, 153, 0.4); } 70% { box-shadow: 0 0 0 15px rgba(236, 72, 153, 0); } 100% { box-shadow: 0 0 0 0 rgba(236, 72, 153, 0); } }
    .animate-ring { animation: pulse-ring 2.5s infinite cubic-bezier(0.66, 0, 0, 1); }
    
    @keyframes word-highlight { 0%, 100% { background-color: transparent; color: inherit; transform: scale(1); } 15%, 85% { background-color: rgba(236, 72, 153, 0.12); color: #ec4899; transform: scale(1.08); border-radius: 0.375rem; box-shadow: 0 4px 15px rgba(236, 72, 153, 0.1); } }
    .animate-word-highlight { animation: word-highlight 4.5s cubic-bezier(0.4, 0, 0.2, 1) infinite; display: inline-block; will-change: transform, background-color; }

    @keyframes cursor-bob { 0%, 100% { transform: translate(15px, 25px) rotate(-15deg); opacity: 0; } 15%, 85% { transform: translate(0, 0) rotate(-15deg); opacity: 1; } }
    .animate-cursor-bob { animation: cursor-bob 4.5s cubic-bezier(0.4, 0, 0.2, 1) infinite; will-change: transform, opacity; }

    @keyframes tooltip-pop { 0%, 100% { opacity: 0; transform: translateY(8px) scale(0.95); } 15%, 85% { opacity: 1; transform: translateY(0) scale(1); } }
    .animate-tooltip-pop { animation: tooltip-pop 4.5s cubic-bezier(0.4, 0, 0.2, 1) infinite; will-change: transform, opacity; }

    /* EDGE A11Y FIX: Disables animations for users with vestibular disorders */
    @media (prefers-reduced-motion: reduce) {
      .animate-wave, .animate-ring, .animate-word-highlight, .animate-cursor-bob, .animate-tooltip-pop, .animate-pulse {
        animation: none !important;
        transform: none !important;
      }
    }
  </style>

  <header aria-label="About Us Header" class="relative overflow-hidden bg-white py-24 lg:py-[120px] text-center border-b border-gray-100">
    <div aria-hidden="true" class="absolute inset-0 z-0 pointer-events-none hero-grid-bg"></div>
    <div aria-hidden="true" class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-indigo-500/5 rounded-full blur-[100px] pointer-events-none"></div>
    
    <div class="w-full max-w-[1200px] mx-auto px-6 relative z-10">
      
      <nav aria-label="Breadcrumb" class="mb-6 flex justify-center">
        <ol class="flex items-center space-x-2 text-sm text-slate-500 font-semibold list-none p-0 m-0">
          <li><a href="/" class="hover:text-indigo-600 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 rounded px-1">Home</a></li>
          <li>
            <svg class="w-4 h-4 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/>
            </svg>
          </li>
          <li class="text-slate-800" aria-current="page">Our Story</li>
        </ol>
      </nav>

      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-slate-50 border border-gray-200 text-indigo-950 text-[10px] font-extrabold uppercase tracking-widest mb-6 shadow-sm">
        <span class="w-2 h-2 rounded-full bg-pink-500 animate-pulse"></span>
        The QuranAble Story
      </div>
      
      <h1 class="text-[clamp(2.2rem,5vw,4rem)] font-black leading-[1.1] tracking-tight mb-5 text-indigo-950">
        Modern Technology. <br class="hidden sm:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-violet-500">Sacred Isnad.</span>
      </h1>
      
      <p class="text-[clamp(1rem,2vw,1.15rem)] leading-relaxed font-medium text-slate-600 max-w-2xl mx-auto px-2">
        Bridging the gap between 1,400 years of traditional scholarship and the digital future of the global Ummah.
      </p>
    </div>
  </header>

  <section aria-label="Company Statistics" class="bg-white border-b border-gray-100 relative z-20">
    <div class="max-w-7xl mx-auto grid grid-cols-2 md:grid-cols-4 divide-x divide-y md:divide-y-0 divide-gray-100">
      {stats.map(s => (
        <div class="flex flex-col items-center justify-center py-12 md:py-16 px-4 hover:bg-slate-50 transition-colors cursor-default">
          <span class="text-4xl md:text-5xl font-black text-indigo-950 tracking-tighter mb-2">{s.val}</span>
          <span class="text-slate-500 text-[10px] md:text-xs font-bold uppercase tracking-[0.2em] text-center">{s.label}</span>
        </div>
      ))}
    </div>
  </section>

  <section aria-label="Smart Classroom Technology" class="bg-white py-24 md:py-40 px-6 border-y border-gray-100">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-20 lg:gap-32 items-center">
      
      <div class="w-full perspective-1000">
         <div class="bg-[#1C1C1E] rounded-2xl md:rounded-[2rem] shadow-[0_40px_100px_-20px_rgba(0,0,0,0.5)] overflow-hidden border border-white/10 w-full flex flex-col">
            
            <div class="bg-[#2C2C2E] px-4 md:px-5 py-3.5 flex items-center justify-between border-b border-white/5">
               <div class="flex gap-2">
                  <div class="w-3 h-3 rounded-full bg-[#ED6A5E] shadow-inner"></div>
                  <div class="w-3 h-3 rounded-full bg-[#F4BF4F] shadow-inner"></div>
                  <div class="w-3 h-3 rounded-full bg-[#61C554] shadow-inner"></div>
               </div>
               <span class="text-[10px] font-bold text-white/40 tracking-widest uppercase">QuranAble Smart Space</span>
               <div class="w-8"></div>
            </div>
            
            <div class="flex flex-col md:flex-row p-3 md:p-4 gap-3 md:gap-4 bg-[#0A0A0B] min-h-[380px]">
               
               <div class="w-full md:w-2/5 bg-[#1C1C1E] rounded-xl border border-white/5 relative overflow-hidden flex flex-col p-4 shadow-inner min-h-[240px]">
                  
                  <div class="absolute top-4 right-4 w-16 h-24 bg-gradient-to-b from-[#2C2C2E] to-[#1C1C1E] rounded-lg border border-white/10 shadow-xl flex items-center justify-center z-20 overflow-hidden">
                     <div class="absolute top-2 right-2 w-1.5 h-1.5 bg-green-500 rounded-full shadow-[0_0_8px_rgba(34,197,94,0.8)]"></div>
                     <svg aria-hidden="true" class="w-8 h-8 text-white/20" fill="currentColor" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
                  </div>

                  <div class="absolute top-4 left-4 bg-red-500/10 border border-red-500/30 text-red-500 text-[9px] font-bold px-2 py-1 rounded flex items-center gap-1.5 uppercase tracking-widest backdrop-blur-md z-20">
                     <span class="w-1.5 h-1.5 bg-red-500 rounded-full animate-pulse"></span> REC
                  </div>

                  <div class="flex-grow flex flex-col items-center justify-center relative mt-4">
                     <div class="w-24 h-24 rounded-full bg-[#2C2C2E] border-2 border-pink-500/40 flex items-center justify-center shadow-[0_0_25px_rgba(236,72,153,0.15)] overflow-hidden relative z-10 bg-gradient-to-t from-indigo-500/20 to-transparent">
                        <svg aria-hidden="true" class="w-16 h-16 text-white/10 mt-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
                     </div>
                     <div class="absolute bottom-6 bg-[#1C1C1E]/80 backdrop-blur-sm px-2.5 py-1.5 rounded-full border border-white/10 flex items-end gap-[3px] h-6 w-14 justify-center z-20 shadow-lg">
                        <div class="w-[3px] bg-pink-500 rounded-t-sm h-full animate-wave wave-1"></div>
                        <div class="w-[3px] bg-pink-500 rounded-t-sm h-3/4 animate-wave wave-2"></div>
                        <div class="w-[3px] bg-white/80 rounded-t-sm h-1/2 animate-wave wave-3"></div>
                        <div class="w-[3px] bg-pink-500 rounded-t-sm h-full animate-wave wave-4"></div>
                     </div>
                  </div>

                  <div class="absolute bottom-4 left-4 right-4 flex items-center justify-between">
                     <span class="text-white text-[11px] font-bold bg-black/60 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/10 flex items-center gap-2 shadow-sm">
                        Sheikh Ahmed
                        <span class="w-1.5 h-1.5 rounded-full bg-green-500 shadow-[0_0_5px_rgba(34,197,94,0.5)]"></span>
                     </span>
                     <div class="w-8 h-8 rounded-full bg-white/10 transition-colors flex items-center justify-center text-white cursor-default">
                        <svg aria-hidden="true" class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd"/></svg>
                     </div>
                  </div>
               </div>

               <div class="w-full md:w-3/5 bg-white rounded-xl relative flex flex-col justify-center shadow-inner overflow-hidden min-h-[240px]">
                  
                  <div aria-hidden="true" class="absolute inset-0 opacity-[0.04]" style="background-image: linear-gradient(to right, #000 1px, transparent 1px), linear-gradient(to bottom, #000 1px, transparent 1px); background-size: 20px 20px;"></div>
                  
                  <div class="space-y-8 w-full px-6 relative z-10 flex flex-col items-center">
                     
                     <div class="text-indigo-950 font-serif text-2xl md:text-[28px] leading-relaxed text-center" dir="rtl" lang="ar" aria-label="Example of Quranic verse with interactive Tajweed highlight">
                        <div class="opacity-60 mb-4 text-xl md:text-2xl">بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ</div>
                        
                        <div class="flex flex-wrap justify-center gap-x-2.5">
                           <span>الْحَمْدُ</span>
                           <span>لِلَّهِ</span>
                           <span>رَبِّ</span>
                           <span>الْعَالَمِينَ</span>
                        </div>
                        
                        <div class="flex flex-wrap justify-center gap-x-2.5 mt-2">
                           <span>الرَّحْمَٰنِ</span>
                           
                           <span class="relative group cursor-default">
                              <span class="relative z-10 px-2 py-0.5 animate-word-highlight inline-block">الرَّحِيمِ</span>
                              
                              <div class="absolute -bottom-10 -left-4 text-indigo-950 animate-cursor-bob z-20 pointer-events-none">
                                 <svg aria-hidden="true" class="w-7 h-7 drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24"><path d="M4 4l16 6-7 2-2 7L4 4z" /></svg>
                                 <div lang="en" class="bg-indigo-950 text-white text-[10px] font-bold px-3 py-1.5 rounded-lg shadow-2xl absolute top-6 left-4 whitespace-nowrap animate-tooltip-pop">
                                   Madd Tabee'ee (2 Beats)
                                 </div>
                              </div>
                           </span>
                        </div>
                     </div>
                     
                  </div>
               </div>

            </div>
         </div>
      </div>

      <div class="space-y-10 order-2 lg:order-2">
        <h2 class="text-[clamp(1.75rem,4vw,2.75rem)] font-extrabold text-indigo-950 tracking-tight leading-[1.15]">The Classroom <br /> Experience.</h2>
        <p class="text-[clamp(1rem,2vw,1.15rem)] text-slate-600 leading-relaxed font-medium">Built specifically for Quranic pedagogy, our interface removes distractions so students can focus entirely on the revelation.</p>
        
        <div class="space-y-8 pt-4">
          {[
            { t: "Interactive Whiteboards", d: "Tutors highlight and annotate directly on the digital Mushaf in real-time." },
            { t: "HD Visual Clarity", d: "Crystal clear streaming optimized for reading fine Arabic scripts safely." },
            { t: "Face-to-Face Mastery", d: "Direct visual connection allows tutors to monitor exact articulation points." }
          ].map(item => (
            <div class="flex gap-5 items-start">
              <div class="w-7 h-7 rounded-full bg-white border border-gray-200 flex-none flex items-center justify-center text-pink-500 mt-0.5 shadow-sm">
                 <svg aria-hidden="true" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
              </div>
              <div>
                <h3 class="block text-indigo-950 font-bold text-lg mb-1">{item.t}</h3>
                <p class="text-slate-600 text-base leading-relaxed font-medium">{item.d}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>
  </section>

  <section aria-label="Our Core Values" class="bg-white py-24 lg:py-[100px] border-b border-gray-100">
    <div class="w-full max-w-[1200px] mx-auto px-6">
      <div class="text-center max-w-2xl mx-auto mb-16 lg:mb-20">
        <h2 class="text-[clamp(1.75rem,4vw,2.75rem)] font-extrabold text-indigo-950 tracking-tight leading-[1.15] mb-4">Our Values</h2>
        <p class="text-lg text-slate-600 leading-relaxed font-medium">The uncompromised principles that guide every class, every tutor, and every decision we make.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {values.map(v => (
          <article class="bg-white rounded-[1.25rem] border border-gray-200 p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden group cursor-default">
            
            <div aria-hidden="true" class="absolute top-0 left-0 w-full h-1.5 bg-gray-100 group-hover:bg-gradient-to-r group-hover:from-pink-500 group-hover:to-violet-500 transition-all duration-500"></div>
            
            <div class="w-14 h-14 rounded-xl bg-slate-50 border border-gray-100 flex items-center justify-center text-indigo-950 mb-6 group-hover:bg-pink-500/10 group-hover:text-pink-600 group-hover:border-pink-200 transition-colors duration-300">
              <svg aria-hidden="true" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d={v.icon} /></svg>
            </div>
            
            <div class="mb-4">
               <span class="text-[10px] font-bold uppercase tracking-widest text-pink-500 block mb-1">{v.sub}</span>
               <h3 class="text-xl md:text-2xl font-extrabold text-indigo-950 tracking-tight">{v.title}</h3>
            </div>
            
            <p class="text-slate-600 text-[0.95rem] leading-relaxed font-medium">{v.desc}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section aria-label="Our Hiring Standards" class="bg-slate-50 py-24 lg:py-[120px] relative overflow-hidden">
    <div aria-hidden="true" class="absolute inset-0 z-0 pointer-events-none hero-grid-bg opacity-40"></div>
    
    <div class="w-full max-w-[1200px] mx-auto px-6 relative z-10">
      <div class="text-center mb-16 lg:mb-24">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white border border-gray-200 text-indigo-950 text-[10px] font-extrabold uppercase tracking-widest mb-4 shadow-sm">
          <span class="w-2 h-2 rounded-full bg-pink-500 animate-pulse"></span>
          Quality Engineering
        </div>
        <h2 class="text-[clamp(1.75rem,4vw,2.75rem)] font-extrabold text-indigo-950 tracking-tight leading-[1.15]">We accept less than 5%.</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative">
        <div aria-hidden="true" class="hidden md:block absolute top-[3.5rem] left-[15%] right-[15%] h-[2px] bg-gradient-to-r from-transparent via-gray-300 to-transparent z-0"></div>
        
        {hiringSteps.map(step => (
          <div class="relative bg-white rounded-[1.5rem] p-8 md:p-10 border border-gray-200 shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300 z-10 group flex flex-col items-center text-center md:items-start md:text-left">
            <div class="w-16 h-16 rounded-2xl bg-indigo-50 border border-indigo-100 text-indigo-950 flex items-center justify-center font-black text-2xl mb-6 shadow-sm group-hover:bg-gradient-to-br group-hover:from-pink-500 group-hover:to-violet-500 group-hover:text-white group-hover:border-transparent transition-all duration-300">
              {step.num}
            </div>
            <h3 class="text-xl md:text-2xl font-extrabold text-indigo-950 tracking-tight mb-3">{step.title}</h3>
            <p class="text-slate-600 text-[0.95rem] leading-relaxed font-medium flex-grow">{step.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section aria-label="Global Student Base" class="bg-white py-24 lg:py-[100px] border-y border-gray-100">
    <div class="w-full max-w-[1000px] mx-auto px-6 text-center">
      <h2 class="text-[clamp(1.5rem,3vw,2.5rem)] font-extrabold text-indigo-950 tracking-tight leading-[1.15] mb-10">Connecting the Ummah</h2>
      
      <ul class="flex flex-wrap justify-center gap-3 md:gap-4 p-0 m-0 list-none">
        {countries.map(c => (
          <li class="px-6 py-3 bg-slate-50 border border-gray-200 hover:border-pink-300 hover:bg-pink-50 hover:text-pink-700 transition-colors duration-300 rounded-full font-bold text-sm text-slate-700 shadow-sm cursor-default">
            {c}
