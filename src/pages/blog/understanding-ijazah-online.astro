---

<BaseLayout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <style>
    /* EDGE OKLCH COLOR ENGINE (INDIGO #4F46E5 & AMBER THEME) */
    :root {
      /* Mathematically scaled Indigo (Primary: #4F46E5) */
      --color-indigo-50: oklch(97% 0.014 283.34);
      --color-indigo-100: oklch(93% 0.034 283.22);
      --color-indigo-200: oklch(88% 0.058 283.11);
      --color-indigo-300: oklch(81% 0.106 283.05);
      --color-indigo-400: oklch(71% 0.165 283.08);
      --color-indigo-500: oklch(62% 0.214 283.16);
      --color-indigo-600: oklch(54% 0.226 283.3); /* Matches exactly #4F46E5 */
      --color-indigo-700: oklch(47% 0.2 284.14);
      --color-indigo-800: oklch(39% 0.163 284.5);
      --color-indigo-900: oklch(34% 0.138 284.66);
      
      /* Complementary Amber for glowing text/accents */
      --color-amber-400: oklch(82.8% 0.189 84.429);
      --color-amber-500: oklch(76.9% 0.188 70.08);
    }

    /* VERCEL-STYLE RAIN GRID ENGINE */
    .vercel-grid {
      position: absolute;
      inset: 0;
      background-image: linear-gradient(to right, oklch(from var(--color-indigo-600) l c h / 0.08) 1px, transparent 1px);
      background-size: 64px 100%;
      mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
      -webkit-mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
      z-index: 0;
    }

    .rain-line {
      position: absolute;
      top: -150px;
      width: 1px;
      height: 120px;
      background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.9), var(--color-indigo-500), transparent);
      box-shadow: 0 0 12px oklch(from var(--color-indigo-500) l c h / 0.4);
      animation: rain var(--duration) var(--delay) linear infinite;
      opacity: 0;
    }

    .line-1 { left: 64px; --duration: 3s; --delay: 0s; }
    .line-2 { left: 256px; --duration: 4.5s; --delay: 1s; }
    .line-3 { left: 448px; --duration: 3.2s; --delay: 2.5s; }
    .line-4 { left: 640px; --duration: 5s; --delay: 0.5s; }
    .line-5 { left: 832px; --duration: 3.8s; --delay: 1.8s; }
    .line-6 { left: 1088px; --duration: 4.2s; --delay: 0.2s; }
    .line-7 { left: 1280px; --duration: 3.5s; --delay: 1.2s; }

    @keyframes rain {
      0% { transform: translateY(0); opacity: 0; }
      10% { opacity: 1; }
      80% { opacity: 1; }
      100% { transform: translateY(100vh); opacity: 0; }
    }

    .reading-bar { position: fixed; top: 0; left: 0; height: 4px; background: linear-gradient(to right, var(--color-indigo-400), var(--color-indigo-600)); z-index: 9999; width: 0%; transition: width 0.1s ease-out; }
    @keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-12px); } }
    .animate-float { animation: float 6s ease-in-out infinite; }

    .edge-prose h2 { color: #0f172a; font-weight: 900; font-size: 2rem; letter-spacing: -0.03em; margin-top: 3.5rem; margin-bottom: 1.5rem; }
    .edge-prose p { color: #334155; font-size: 1.125rem; line-height: 1.85; margin-bottom: 1.75rem; }
    .edge-prose strong { color: #0f172a; font-weight: 800; }
    .edge-prose em { color: var(--color-indigo-600); font-style: normal; font-weight: 600; }

    @media (prefers-reduced-motion: reduce) {
      .animate-float { animation: none !important; transform: none !important; }
      .rain-line { display: none; }
    }
  </style>

  <div id="read-progress" class="reading-bar"></div>

  <header class="relative bg-white pt-32 md:pt-48 pb-20 md:pb-28 px-6 border-b border-gray-100 overflow-hidden">
