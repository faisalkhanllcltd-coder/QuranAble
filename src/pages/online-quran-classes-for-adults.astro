---
// src/pages/online-quran-classes-for-adults.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Online Quran Classes for Adults | Flexible & Private | QuranAble";
const pageDescription = "Perfect your Tajweed or start your Hifz on your own schedule. Private, 1-on-1 online Quran classes designed for busy professionals and adult learners.";

// EDGE SEO: Comprehensive E-E-A-T Schema mapped directly to your site content
const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Course",
      "name": "Online Quran & Tajweed Classes for Adults",
      "description": "Private, 1-on-1 online Quran instruction tailored for adults. Focus on Tajweed correction, fluent reading, and Hifz with flexible 24/7 scheduling in a zero-judgment environment.",
      "provider": {
        "@type": "Organization",
        "name": "QuranAble",
        "sameAs": "https://quranable.com"
      },
      "audience": {
        "@type": "Audience",
        "audienceType": "Adults"
      },
      "coursePrerequisites": "None. We offer tracks from absolute beginner (Qaida) to advanced Ijazah preparation.",
      "educationalCredentialAwarded": "Tajweed Mastery, Fluent Recitation & Hifz Certification",
      "hasCourseInstance": {
        "@type": "CourseInstance",
        "courseMode": "Online",
        "courseWorkload": "PT2H"
      },
      "offers": {
        "@type": "Offer",
        "price": "40.00",
        "priceCurrency": "USD",
        "category": "Monthly Subscription"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Is it too late for me to start learning the Quran?",
          "acceptedAnswer": { "@type": "Answer", "text": "It is never too late. Many of our adult students start from the very beginning with the Noorani Qaida. Our tutors are highly encouraging and maintain a strict zero-judgment environment." }
        },
        {
          "@type": "Question",
          "name": "How flexible are the class timings?",
          "acceptedAnswer": { "@type": "Answer", "text": "Extremely flexible. Since we operate globally, you can schedule classes before work, during lunch, or late at night. We accommodate your time zone." }
        },
        {
          "@type": "Question",
          "name": "Can I request a male or female teacher?",
          "acceptedAnswer": { "@type": "Answer", "text": "Yes, absolutely. We ensure complete cultural and personal comfort by allowing you to explicitly choose a male or female instructor." }
        },
        {
          "@type": "Question",
          "name": "What if my schedule changes or I miss a class?",
          "acceptedAnswer": { "@type": "Answer", "text": "We understand adults have busy lives and unpredictable schedules. We offer a flexible make-up class policy so you never lose out on your learning." }
        }
      ]
    }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <style>
    /* VERCEL-STYLE RAIN GRID ENGINE (UNTOUCHED) */
    .vercel-grid {
      position: absolute;
      inset: 0;
      background-image: linear-gradient(to right, rgba(26, 115, 232, 0.1) 1px, transparent 1px);
      background-size: 64px 100%;
      mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
      -webkit-mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
    }

    .rain-line {
      position: absolute;
      top: -150px;
      width: 1.5px;
      height: 140px;
      background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.9), rgba(26, 115, 232, 0.7), transparent);
      box-shadow: 0 0 15px rgba(26, 115, 232, 0.6), 0 0 5px rgba(255, 255, 255, 0.8);
      animation: rain var(--duration) var(--delay) linear infinite;
      opacity: 0;
    }

    .line-1 { left: 64px; --duration: 3s; --delay: 0s; }
    .line-2 { left: 256px; --duration: 4.5s; --delay: 1s; }
    .line-3 { left: 448px; --duration: 3.2s; --delay: 2.5s; }
    .line-4 { left: 640px; --duration: 5s; --delay: 0.5s; }
    .line-5 { left: 832px; --duration: 3.8s; --delay: 1.8s; }
    .line-6 { left: 1088px; --duration: 4.2s; --delay: 0.2s; }
    .line-7 { left: 1280px; --duration: 3.5s; --delay: 1.2s; }

    @keyframes rain {
      0% { transform: translateY(0); opacity: 0; }
      10% { opacity: 1; }
      80% { opacity: 1; }
      100% { transform: translateY(100vh); opacity: 0; }
    }

    /* PREMIUM EDUCATIONAL UI ANIMATIONS */
    .edu-shadow { box-shadow: 0 20px 40px -15px rgba(30, 27, 75, 0.08); }
    .gold-glow { box-shadow: 0 0 30px -5px rgba(251, 191, 36, 0.4); }
    
    @keyframes cursor-demo {
      0% { transform: translate(0px, 0px); }
      20% { transform: translate(60px, -20px); }
      40% { transform: translate(130px, -10px); }
      60% { transform: translate(180px, -25px); }
      100% { transform: translate(0px, 0px); }
    }
    @keyframes text-highlight {
      0%, 100% { background-color: transparent; }
      30%, 70% { background-color: rgba(251, 191, 36, 0.3); border-radius: 6px; }
    }
    
    /* Dynamic Guidance Icons */
    @keyframes float-gentle { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-6px); } }
    @keyframes pulse-light { 0%, 100% { opacity: 0.6; transform: scale(1); } 50% { opacity: 1; transform: scale(1.1); } }
    @keyframes spin-slow { 100% { transform: rotate(360deg); } }

    .animate-float-gentle { animation: float-gentle 4s ease-in-out infinite; }
    .animate-pulse-light { animation: pulse-light 3s ease-in-out infinite; }
    .animate-spin-slow { animation: spin-slow 15s linear infinite; }
    .animate-demo-cursor { animation: cursor-demo 6s cubic-bezier(0.4, 0, 0.2, 1) infinite; }
    .animate-demo-highlight { animation: text-highlight 6s ease-in-out infinite; }

    /* Custom FAQ Accordion */
    details > summary { list-style: none; outline: none; }
    details > summary::-webkit-details-marker { display: none; }
    details[open] summary ~ * { animation: sweep 0.4s ease-in-out; }
    @keyframes sweep { 0% { opacity: 0; transform: translateY(-10px); } 100% { opacity: 1; transform: translateY(0); } }

    @media (prefers-reduced-motion: reduce) {
      *, ::before, ::after { animation: none !important; transition: none !important; }
      .rain-line { display: none; }
    }
  </style>

