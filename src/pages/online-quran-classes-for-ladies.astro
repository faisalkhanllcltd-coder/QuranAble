---
// src/pages/online-quran-classes-for-ladies.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Online Quran Classes for Ladies | 100% Female Tutors | QuranAble";
const pageDescription = "Learn Quran in complete privacy. 1-on-1 online classes for sisters with certified female tutors. Perfect your Tajweed on a schedule that fits your life.";

// EDGE SEO: Comprehensive E-E-A-T Schema mapped directly to your site content
const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Course",
      "name": "Online Quran & Tajweed Classes for Ladies",
      "description": "Private, 1-on-1 online Quran instruction exclusively for women. Learn from highly qualified Alima-certified female tutors in a comfortable, entirely private environment.",
      "provider": {
        "@type": "Organization",
        "name": "QuranAble",
        "sameAs": "https://quranable.com"
      },
      "audience": {
        "@type": "Audience",
        "audienceType": "Women"
      },
      "coursePrerequisites": "None. We offer tracks from absolute beginner (Qaida) to advanced Ijazah preparation.",
      "educationalCredentialAwarded": "Tajweed Mastery, Fluent Recitation & Hifz Certification",
      "hasCourseInstance": {
        "@type": "CourseInstance",
        "courseMode": "Online",
        "courseWorkload": "PT2H"
      },
      "offers": {
        "@type": "Offer",
        "price": "40.00",
        "priceCurrency": "USD",
        "category": "Monthly Subscription"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Will my teacher definitely be female?",
          "acceptedAnswer": { "@type": "Answer", "text": "Yes, absolutely. This program is exclusively taught by our highly qualified, Alima-certified female instructors to ensure your complete comfort and privacy." }
        },
        {
          "@type": "Question",
          "name": "Do I have to keep my camera on?",
          "acceptedAnswer": { "@type": "Answer", "text": "While having the camera on helps the tutor correct your Makharij (pronunciation), it is entirely up to your comfort level. You are in a strictly female-to-female private session." }
        },
        {
          "@type": "Question",
          "name": "I am a busy mother. Are timings flexible?",
          "acceptedAnswer": { "@type": "Answer", "text": "Extremely flexible. We operate globally, so you can schedule classes before the kids wake up, during their school hours, or late at night." }
        },
        {
          "@type": "Question",
          "name": "What if my schedule changes or I miss a class?",
          "acceptedAnswer": { "@type": "Answer", "text": "We understand that family and work life can be unpredictable. We offer a highly flexible make-up class policy so you never lose out on your learning." }
        }
      ]
    }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <style>
    /* VERCEL-STYLE RAIN GRID ENGINE (UNTOUCHED) */
    .vercel-grid {
      position: absolute;
      inset: 0;
      background-image: linear-gradient(to right, rgba(244, 63, 94, 0.08) 1px, transparent 1px);
      background-size: 64px 100%;
      mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
      -webkit-mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
    }

    .rain-line {
      position: absolute;
      top: -150px;
      width: 1.5px;
      height: 140px;
      background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.9), rgba(244, 63, 94, 0.6), transparent);
      box-shadow: 0 0 15px rgba(244, 63, 94, 0.4), 0 0 5px rgba(255, 255, 255, 0.8);
      animation: rain var(--duration) var(--delay) linear infinite;
      opacity: 0;
    }

    .line-1 { left: 64px; --duration: 3s; --delay: 0s; }
    .line-2 { left: 256px; --duration: 4.5s; --delay: 1s; }
    .line-3 { left: 448px; --duration: 3.2s; --delay: 2.5s; }
    .line-4 { left: 640px; --duration: 5s; --delay: 0.5s; }
    .line-5 { left: 832px; --duration: 3.8s; --delay: 1.8s; }
    .line-6 { left: 1088px; --duration: 4.2s; --delay: 0.2s; }
    .line-7 { left: 1280px; --duration: 3.5s; --delay: 1.2s; }

    @keyframes rain {
      0% { transform: translateY(0); opacity: 0; }
      10% { opacity: 1; }
      80% { opacity: 1; }
      100% { transform: translateY(100vh); opacity: 0; }
    }

    /* PREMIUM EDUCATIONAL UI ANIMATIONS */
    .edu-shadow { box-shadow: 0 20px 40px -15px rgba(30, 27, 75, 0.08); }
    .rose-glow { box-shadow: 0 0 30px -5px rgba(244, 63, 94, 0.4); }
    
    @keyframes cursor-demo {
      0% { transform: translate(0px, 0px); }
      20% { transform: translate(60px, -20px); }
      40% { transform: translate(130px, -10px); }
      60% { transform: translate(180px, -25px); }
      100% { transform: translate(0px, 0px); }
    }
    @keyframes text-highlight {
      0%, 100% { background-color: transparent; }
      30%, 70% { background-color: rgba(244, 63, 94, 0.2); border-radius: 6px; }
    }
    
    /* Dynamic Guidance Icons */
    @keyframes float-gentle { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-6px); } }
    @keyframes pulse-light { 0%, 100% { opacity: 0.6; transform: scale(1); } 50% { opacity: 1; transform: scale(1.1); } }
    @keyframes spin-slow { 100% { transform: rotate(360deg); } }

    .animate-float-gentle { animation: float-gentle 4s ease-in-out infinite; }
    .animate-pulse-light { animation: pulse-light 3s ease-in-out infinite; }
    .animate-spin-slow { animation: spin-slow 15s linear infinite; }
    .animate-demo-cursor { animation: cursor-demo 6s cubic-bezier(0.4, 0, 0.2, 1) infinite; }
    .animate-demo-highlight { animation: text-highlight 6s ease-in-out infinite; }

    /* Custom FAQ Accordion */
    details > summary { list-style: none; outline: none; }
    details > summary::-webkit-details-marker { display: none; }
    details[open] summary ~ * { animation: sweep 0.4s ease-in-out; }
    @keyframes sweep { 0% { opacity: 0; transform: translateY(-10px); } 100% { opacity: 1; transform: translateY(0); } }

    @media (prefers-reduced-motion: reduce) {
      *, ::before, ::after { animation: none !important; transition: none !important; }
      .rain-line { display: none; }
    }
  </style>

