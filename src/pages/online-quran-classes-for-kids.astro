---
// src/pages/online-quran-classes-for-kids.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Online Quran Classes for Kids | Joyful, Safe & 1-on-1 | QuranAble";
const pageDescription = "Give your child a joyful Quran learning experience at home. 1-on-1 online classes with certified tutors, Tajweed-focused lessons, flexible scheduling, and a free trial.";

// EDGE SEO: Comprehensive E-E-A-T Schema mapped directly to your site content
const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Course",
      "name": "Online Quran & Tajweed Classes for Kids",
      "description": "Interactive, 1-on-1 online Quran classes designed for children. Focus on perfecting Quranic recitation, mastering Tajweed rules, fluent reading, and complete Salah training.",
      "provider": {
        "@type": "Organization",
        "name": "QuranAble",
        "sameAs": "https://quranable.com"
      },
      "audience": {
        "@type": "Audience",
        "audienceType": "Children (Ages 5-15)"
      },
      "coursePrerequisites": "None. Suitable for absolute beginners to advanced Hifz students.",
      "educationalCredentialAwarded": "Quranic Reading Fluency, Perfect Makharij, & Daily Salah Mastery",
      "hasCourseInstance": {
        "@type": "CourseInstance",
        "courseMode": "Online",
        "courseWorkload": "PT2H"
      },
      "offers": {
        "@type": "Offer",
        "price": "40.00",
        "priceCurrency": "USD",
        "category": "Monthly Subscription"
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Who is this course for?",
          "acceptedAnswer": { "@type": "Answer", "text": "It's perfect for children and young beginners. Our trained tutors provide fun, 1-on-1 lessons to guide students from the Arabic alphabet to fluent Quranic reading with Tajweed." }
        },
        {
          "@type": "Question",
          "name": "Are female teachers available?",
          "acceptedAnswer": { "@type": "Answer", "text": "Yes. Female students can request qualified female instructors." }
        },
        {
          "@type": "Question",
          "name": "Are your teachers qualified?",
          "acceptedAnswer": { "@type": "Answer", "text": "Yes! Our instructors are Alim/Alima graduates or hold M.A. and Ijazah certifications in Tajweed and Quranic sciences. They're fluent in English, Urdu, and Arabic." }
        },
        {
          "@type": "Question",
          "name": "Are classes safe for children?",
          "acceptedAnswer": { "@type": "Answer", "text": "Yes, absolutely. All classes are conducted in a safe, secure environment. Parents can monitor sessions if they prefer." }
        }
      ]
    }
  ]
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <style>
    /* VERCEL-STYLE RAIN GRID ENGINE (UNTOUCHED) */
    .vercel-grid {
      position: absolute;
      inset: 0;
      background-image: linear-gradient(to right, rgba(236, 72, 153, 0.05) 1px, transparent 1px);
      background-size: 64px 100%;
      mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
      -webkit-mask-image: linear-gradient(to bottom, black 10%, transparent 90%);
    }

    .rain-line {
      position: absolute;
      top: -150px;
      width: 1.5px;
      height: 140px;
      background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.9), rgba(236, 72, 153, 0.5), transparent);
      box-shadow: 0 0 15px rgba(236, 72, 153, 0.4), 0 0 5px rgba(255, 255, 255, 0.8);
      animation: rain var(--duration) var(--delay) linear infinite;
      opacity: 0;
    }

    .line-1 { left: 64px; --duration: 3s; --delay: 0s; }
    .line-2 { left: 256px; --duration: 4.5s; --delay: 1s; }
    .line-3 { left: 448px; --duration: 3.2s; --delay: 2.5s; }
    .line-4 { left: 640px; --duration: 5s; --delay: 0.5s; }
    .line-5 { left: 832px; --duration: 3.8s; --delay: 1.8s; }
    .line-6 { left: 1088px; --duration: 4.2s; --delay: 0.2s; }
    .line-7 { left: 1280px; --duration: 3.5s; --delay: 1.2s; }

    @keyframes rain {
      0% { transform: translateY(0); opacity: 0; }
      10% { opacity: 1; }
      80% { opacity: 1; }
      100% { transform: translateY(100vh); opacity: 0; }
    }

    /* PREMIUM EDUCATIONAL UI ANIMATIONS */
    .edu-shadow { box-shadow: 0 20px 40px -15px rgba(30, 27, 75, 0.08); }
    .gold-glow { box-shadow: 0 0 30px -5px rgba(251, 191, 36, 0.4); }
    
    @keyframes cursor-demo {
      0% { transform: translate(0px, 0px); }
      20% { transform: translate(60px, -20px); }
      40% { transform: translate(130px, -10px); }
      60% { transform: translate(180px, -25px); }
      100% { transform: translate(0px, 0px); }
    }
    @keyframes text-highlight {
      0%, 100% { background-color: transparent; }
      30%, 70% { background-color: rgba(251, 191, 36, 0.3); border-radius: 6px; }
    }
    
    /* Dynamic Guidance Icons */
    @keyframes float-gentle { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-6px); } }
    @keyframes pulse-light { 0%, 100% { opacity: 0.6; transform: scale(1); } 50% { opacity: 1; transform: scale(1.1); } }
    @keyframes spin-slow { 100% { transform: rotate(360deg); } }

    .animate-float-gentle { animation: float-gentle 4s ease-in-out infinite; }
    .animate-pulse-light { animation: pulse-light 3s ease-in-out infinite; }
    .animate-spin-slow { animation: spin-slow 15s linear infinite; }
    .animate-demo-cursor { animation: cursor-demo 6s cubic-bezier(0.4, 0, 0.2, 1) infinite; }
    .animate-demo-highlight { animation: text-highlight 6s ease-in-out infinite; }

    /* Custom FAQ Accordion */
    details > summary { list-style: none; outline: none; }
    details > summary::-webkit-details-marker { display: none; }
    details[open] summary ~ * { animation: sweep 0.4s ease-in-out; }
    @keyframes sweep { 0% { opacity: 0; transform: translateY(-10px); } 100% { opacity: 1; transform: translateY(0); } }

    @media (prefers-reduced-motion: reduce) {
      *, ::before, ::after { animation: none !important; transition: none !important; }
      .rain-line { display: none; }
    }
  </style>

