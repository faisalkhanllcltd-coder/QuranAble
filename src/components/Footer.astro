---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
const siteUrl = Astro.site ? Astro.site.toString() : 'https://quranable.com';
---

<footer class="relative bg-white border-t border-slate-100 pt-24 pb-12 overflow-hidden" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  
  <div class="absolute inset-0 z-0 pointer-events-none" aria-hidden="true">
    <div class="absolute inset-0" style="background-image: linear-gradient(to right, rgba(0,0,0,0.02) 1px, transparent 1px), linear-gradient(to bottom, rgba(0,0,0,0.02) 1px, transparent 1px); background-size: 40px 40px;"></div>
    
    <div class="rain-drop" style="left: 10%; animation-duration: 7s; animation-delay: 0s;"></div>
    <div class="rain-drop" style="left: 25%; animation-duration: 5s; animation-delay: 2s;"></div>
    <div class="rain-drop" style="left: 40%; animation-duration: 8s; animation-delay: 1s;"></div>
    <div class="rain-drop" style="left: 55%; animation-duration: 6s; animation-delay: 3s;"></div>
    <div class="rain-drop" style="left: 70%; animation-duration: 9s; animation-delay: 0.5s;"></div>
    <div class="rain-drop" style="left: 85%; animation-duration: 5.5s; animation-delay: 4s;"></div>
    <div class="rain-drop" style="left: 95%; animation-duration: 8.5s; animation-delay: 1.5s;"></div>
  </div>

  <style>
    /* 60FPS Hardware Accelerated falling drops */
    .rain-drop {
      position: absolute;
      top: -100px;
      width: 1px;
      height: 100px;
      background: linear-gradient(to bottom, transparent, rgba(236, 72, 153, 0.4), rgba(139, 92, 246, 0.4), transparent);
      animation-name: dropFall;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      will-change: transform, opacity;
    }
    @keyframes dropFall {
      0% { transform: translateY(0); opacity: 0; }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% { transform: translateY(800px); opacity: 0; }
    }
  </style>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-6 gap-12 lg:gap-8 mb-20">
      
      <div class="lg:col-span-2 pr-0 lg:pr-8">
        <a href="/" class="inline-block group mb-6 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-pink-500 rounded-lg" aria-label="QuranAble Home">
          <img 
            src="/logo.svg" 
            alt="QuranAble Logo" 
            class="h-10 w-auto group-hover:opacity-80 transition-opacity duration-300" 
            loading="lazy" 
            decoding="async"
            width="150"
            height="40"
          />
        </a>
        <p class="text-slate-500 leading-relaxed max-w-sm mb-6 text-sm font-medium">
          Engineering the future of Quranic education. We combine Ijazah-certified scholarship with high-performance technology to deliver precise, distraction-free learning globally.
        </p>
        
        <div class="grid grid-cols-2 gap-3 mt-4">
          <div class="flex items-center justify-center gap-1.5 px-2 py-2 bg-white border border-slate-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <svg class="w-4 h-4 text-emerald-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
               <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
